---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "المساج",
    description:
      "جلسات استرخاء وعلاجية بمساج الأحجار والرفلكسولوجي وخشب للمفاصل — أجواء هادئة وروائح طبيعية.",
    icon: "mdi:spa",
  },
  {
    title: "الحمام المغربي",
    description:
      "طقوس تنظيف وتقشير بالبخار ومنتجات مختارة تمنحك نعومة وإشراقة فورية.",
    icon: "mdi:bathtub-outline",
  },
  {
    title: "الأظافر",
    description:
      "جل إكستينشن، هارد جل، ألوان خاصة، عناية بالأظافر الطبيعية وإزالة آمنة.",
    icon: "mdi:nail",
  },
  {
    title: "العناية باليدين والقدمين",
    description:
      "مانيكير وباديكير كلاسيك وماتيا سبيشل، وتقليم وعلاجات قدم مخصّصة.",
    icon: "mdi:hand-heart",
  },
  {
    title: "الرموش",
    description:
      "كلاسيك، وسيبي، فوليوُم روسي، مع خدمات ريفل خفيف/وسط/كثيف وإزالة لطيفة.",
    icon: "mdi:eye-outline",
  },
  {
    title: "تنظيف البشرة",
    description:
      "واكس وتنظيف دقيق للحواجب والوجه والمناطق المختلفة بعناية ولطف على البشرة.",
    icon: "mdi:face-woman-outline",
  },
  {
    title: "الشعر",
    description:
      "قص أطراف أو قص كامل، سشوار ولمسات نهائية تمنحك مظهراً أنيقاً.",
    icon: "mdi:hair-dryer-outline",
  },
];
---

<ContentSection title="الخدمات" id="features">
  <Fragment slot="lead">
    نهتم بتفاصيل تجربتك من أول لحظة — عناية <span class="text-primary"
      >متكاملة</span
    >
    بمواد <span class="text-primary">طبيعية</span> وأجواء <span
      class="text-primary">فاخرة</span
    >.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
